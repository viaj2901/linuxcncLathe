<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
         <vbox>
         <relief>RIDGE</relief>         
         <bd>6</bd>
                <label>
                        <text>"Spindle"</text>
                        <font>("Cousine",17)</font>
                </label>
                <hbox>
                        <label>
                                <text>"Power:"</text>
                                <font>("Cousine",10)</font>
                        </label>
                </hbox>
                <bar>
                        <halpin>"spindle-output-power"</halpin>
                        <max_>750</max_>
                </bar>
                <hbox>
                        <label>
                                <text>"Temp:    "</text>
                                <font>("Cousine",10)</font>
                        </label>
                        <number> 
                                <halpin>"spindle-temperature"</halpin>
                                <font>("Cousine",10)</font>
                                <format>"d"</format>
                        </number>
                </hbox>
                <hbox>
                        <label>
                                <text>"Voltage :"</text>
                                <font>("Cousine",10)</font>
                        </label>
                        <number> 
                                <halpin>"spindle-voltage"</halpin>
                                <font>("Cousine",10)</font>
                                <format>"d"</format>
                        </number>
                </hbox>
                <hbox>
                        <label>
                                <text>"Command: "</text>
                                <font>("Cousine",10)</font>
                        </label>
                        <number> 
                                <halpin>"spindle-command"</halpin>
                                <font>("Cousine",10)</font>
                                <format>"d"</format>
                        </number>
                </hbox>
                <hbox>
                        <label>
                                <text>"Speed"</text>
                                <font>("Cousine",10)</font>
                        </label>
                        <number> 
                                <halpin>"spindle-speed"</halpin>
                                <font>("Cousine",10)</font>
                                <format>"d"</format>
                        </number>
                </hbox>
                <hbox>
                    <label>
                            <text>"At-Speed:         "</text>
                            <font>("Cousine",10)</font>
                    </label>
                    <led>
                        <halpin>"spindle-at-speed-led"</halpin> 
                        <size>10</size> 
                        <on_color>"green"</on_color>
                        <off_color>"red"</off_color>
                    </led>
                </hbox>
                <label>
                        <text>"Faults"</text>
                        <font>("Cousine",17)</font>
                </label>
                <hbox>
                    <label>
                            <text>"Fault             "</text>
                            <font>("Cousine",10)</font>
                    </label>
                    <led>
                        <halpin>"spindle-fault-led"</halpin> 
                        <size>10</size> 
                        <on_color>"red"</on_color>
                        <off_color>"green"</off_color>
                    </led>
                </hbox>
                <hbox>
                    <label>
                            <text>"Duration          "</text>
                            <font>("Cousine",10)</font>
                    </label>
                    <led>
                        <halpin>"spindle-fault-duration-led"</halpin> 
                        <size>10</size> 
                        <on_color>"red"</on_color>
                        <off_color>"green"</off_color>
                    </led>
                </hbox>
                <hbox>
                    <label>
                            <text>"Over Voltage      "</text>
                            <font>("Cousine",10)</font>
                    </label>
                    <led>
                        <halpin>"spindle-fault-over-voltage-led"</halpin> 
                        <size>10</size> 
                        <on_color>"red"</on_color>
                        <off_color>"green"</off_color>
                    </led>
                </hbox>
                <hbox>
                    <label>
                            <text>"Under Voltage     "</text>
                            <font>("Cousine",10)</font>
                    </label>
                    <led>
                        <halpin>"spindle-fault-under-voltage-led"</halpin> 
                        <size>10</size> 
                        <on_color>"red"</on_color>
                        <off_color>"green"</off_color>
                    </led>
                </hbox>
                <hbox>
                    <label>
                            <text>"Over Temp         "</text>
                            <font>("Cousine",10)</font>
                    </label>
                    <led>
                        <halpin>"spindle-fault-over-temperature-led"</halpin> 
                        <size>10</size> 
                        <on_color>"red"</on_color>
                        <off_color>"green"</off_color>
                    </led>
                </hbox>
                <hbox>
                    <label>
                            <text>"Start Up          "</text>
                            <font>("Cousine",10)</font>
                    </label>
                    <led>
                        <halpin>"spindle-fault-start-up-led"</halpin> 
                        <size>10</size> 
                        <on_color>"red"</on_color>
                        <off_color>"green"</off_color>
                    </led>
                </hbox>
                <hbox>
                    <label>
                            <text>"Speed Feedback    "</text>
                            <font>("Cousine",10)</font>
                    </label>
                    <led>
                        <halpin>"spindle-fault-speed-feedback-led"</halpin> 
                        <size>10</size> 
                        <on_color>"red"</on_color>
                        <off_color>"green"</off_color>
                    </led>
                </hbox>
                <hbox>
                    <label>
                            <text>"Over Current      "</text>
                            <font>("Cousine",10)</font>
                    </label>
                    <led>
                        <halpin>"spindle-fault-over-current-led"</halpin> 
                        <size>10</size> 
                        <on_color>"red"</on_color>
                        <off_color>"green"</off_color>
                    </led>
                </hbox>
                <hbox>
                    <label>
                            <text>"Software Error    "</text>
                            <font>("Cousine",10)</font>
                    </label>
                    <led>
                        <halpin>"spindle-fault-software-error-led"</halpin> 
                        <size>10</size> 
                        <on_color>"red"</on_color>
                        <off_color>"green"</off_color>
                    </led>
                </hbox>
                <hbox>
                    <label>
                            <text>"Driver Protection "</text>
                            <font>("Cousine",10)</font>
                    </label>
                    <led>
                        <halpin>"spindle-fault-driver-protection-led"</halpin> 
                        <size>10</size> 
                        <on_color>"red"</on_color>
                        <off_color>"green"</off_color>
                    </led>
                </hbox>
        </vbox>
        <vbox>
         <relief>RIDGE</relief>         
         <bd>6</bd>
                <label>
                        <text>"Limit Switch"</text>
                        <font>("Cousine",17)</font>
                </label>
                <hbox>
                    <label>
                            <text>"X Limit: "</text>
                            <font>("Cousine",10)</font>
                    </label>
                    <led>
                        <halpin>"x-limit-switch"</halpin> 
                        <size>10</size> 
                        <on_color>"green"</on_color>
                        <off_color>"red"</off_color>
                    </led>
                </hbox>
                <hbox>
                    <label>
                            <text>"Z Limit: "</text>
                            <font>("Cousine",10)</font>
                    </label>
                    <led>
                        <halpin>"z-limit-switch"</halpin> 
                        <size>10</size> 
                        <on_color>"green"</on_color>
                        <off_color>"red"</off_color>
                    </led>
                </hbox>
        </vbox>
</pyvcp>
